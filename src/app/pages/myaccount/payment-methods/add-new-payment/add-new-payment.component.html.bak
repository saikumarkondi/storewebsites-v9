<div class="">
  <div class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="new-payment-method-section">
      <div class="row">
        <div class="col-md-12">
          <h4>Add New Payment Method</h4>
          <form [formGroup]=formAddNewPayment (ngSubmit)="onSaveCard()">
            <div class="row">
              <div class="col-md-12">
                <div class="cards">
                  <ul class="pull-left">
                    <li>
                      <img [ngClass]="{'img-disabled' : cardType !== 'Discover'}" alt="Discover" title="Discover" src="../assets/Images/discover-card.jpg"
                        width="57" height="36" border="0" />
                    </li>
                    <li>
                      <img [ngClass]="{'img-disabled' : cardType !== 'MasterCard'}" alt="Master" title="Master" src="../assets/Images/mastercard_logo_.gif"
                        width="57" height="36" border="0" />
                    </li>
                    <li>
                      <img [ngClass]="{'img-disabled' : cardType !== 'Visa'}" style="padding-top: 5px;" alt="Visa"
                        title="Visa" src="../assets/Images/new_visa_.gif" width="57" height="26" border="0" />
                    </li>
                    <li>
                      <img [ngClass]="{'img-disabled' : cardType !== 'AmericanExpress'}" alt="Amex" title="Amex" src="../assets/Images/american_express_logo_.gif"
                        width="43" height="36" border="0" />
                    </li>
                  </ul>

                </div>
              </div>
              <div class="col-md-12">
                <br>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="text-uppercase">Card Number <span>*</span>
                        <input type="text" formControlName="sixteenDigitNumber" (keyup)="showCardType(formAddNewPayment.controls['sixteenDigitNumber'].valid)"
                          class="form-control" placeholder="" (keypress)="numericOnly($event)">
                        <div *ngIf="submitted && f.sixteenDigitNumber.errors" class="alert alert-danger">
                          <div *ngIf="f.sixteenDigitNumber.errors.required">Card Number is required.</div>
                          <div *ngIf="f.sixteenDigitNumber.errors.maxlength">Card Number should not be more than 16 digits</div>
                          <div *ngIf="f.sixteenDigitNumber.errors.minlength">Invalid Card Number</div>
                        </div>
                      </label>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="text-uppercase">Expiry Date <span>*</span>
                        <div class="row">
                          <div class="col-xs-6">
                            <select class="selectsize form-control" formControlName="expiryMonth">
                              <option *ngFor="let month of months">{{month}}</option>
                            </select>
                            <div *ngIf="submitted && f.expiryMonth.errors" class="alert alert-danger">
                              <div *ngIf="f.expiryMonth.errors.required">Expiry Month is required.</div>
                            </div>
                          </div>
                          <div class="col-xs-6">
                            <select class="selectsize form-control" formControlName="expiryYear">
                              <option *ngFor="let year of years">{{year}}</option>
                            </select>
                            <div *ngIf="submitted && f.expiryYear.errors" class="alert alert-danger">
                              <div *ngIf="f.expiryYear.errors.required">Expiry Year is required.</div>
                            </div>
                          </div>
                        </div>
                      </label>
                    </div>
                  </div>
                </div>
                <hr>
              </div>
              <div class="col-md-12">
                <h4>Billing Address</h4>
                <br>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="text-uppercase">First Name <span>*</span>
                        <input type="text" formControlName="firstName" class="form-control" placeholder="">
                        <div *ngIf="submitted && f.firstName.errors" class="alert alert-danger">
                          <div *ngIf="f.firstName.errors.required">First Name is required.</div>
                          <div *ngIf="f.firstName.errors.minlength">First Name should be at least 2 characters</div>
                        </div>
                      </label>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="text-uppercase">Last Name
                        <input type="text" formControlName="lastName" class="form-control" placeholder="">
                        <div *ngIf="submitted && f.lastName.errors" class="alert alert-danger">
                          <div *ngIf="f.lastName.errors.required">Last Name is required.</div>
                          <div *ngIf="f.lastName.errors.minlength">Last Name should be at least 2 characters</div>
                        </div>
                      </label>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="text-uppercase">Address<span>*</span>
                        <input type="text" formControlName="address" class="form-control" placeholder="">
                        <div *ngIf="submitted && f.address.errors" class="alert alert-danger">
                          <div *ngIf="f.address.errors.required">Address is required.</div>
                        </div>
                      </label>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="text-uppercase">City <span>*</span>
                        <input type="text" formControlName="city" class="form-control" placeholder="">
                        <div *ngIf="submitted && f.city.errors" class="alert alert-danger">
                          <div *ngIf="f.city.errors.required">City is required.</div>
                        </div>
                      </label>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="text-uppercase country">State <span>*</span>
                        <input type="text" formControlName="state" class="form-control" placeholder="">
                        <div *ngIf="submitted && f.state.errors" class="alert alert-danger">
                          <div *ngIf="f.state.errors.required">State is required.</div>
                        </div>
                      </label>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="text-uppercase">Zip Code <span>*</span>
                        <input type="text" formControlName="zipCode" class="form-control" placeholder="">
                        <div *ngIf="submitted && f.zipCode.errors" class="alert alert-danger">
                          <div *ngIf="f.zipCode.errors.required">Zip Code is required.</div>
                        </div>
                      </label>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="text-uppercase">Phone Number <span>*</span>
                        <input type="text" formControlName="phoneNumber" class="form-control" placeholder="">
                        <div *ngIf="submitted && f.phoneNumber.errors" class="alert alert-danger">
                          <div *ngIf="f.phoneNumber.errors.required">Phone Number is required.</div>
                        </div>
                      </label>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="text-uppercase saveaddress">
                        <input type="checkbox" name="" (change)="saveFlag()" uncheck=""> Save to Addresses
                      </label>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <div class="btn_right button-container">
                        <button type="cancel" routerLink="../payment-methods"  class="btn btn-default novalue">Cancel</button>
                        <button type="submit" class="btn btn-default close">Save</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>